<div id="add-new-var">
    <h2>Cadastro de variáveis</h2>
    <div>
        <p>Nome</p>
        <input type="text" name="var-name" id="var-name" placeholder="Digite um nome para a variável">
    </div>
    <div class="select-type">
        <p>Tipo</p>
        <select name="var-type" id="var-type">
            <option value="INTERN">Interna</option>
            <option value="IN-DIG">Entrada digital</option>
            <option value="IN-ANA">Entrada analógica</option>
            <option value="OUT-DIG">Saída digital</option>
            <option value="OUT-ANA">saída analógica</option>
        </select>
    </div>
    <div class="data-var-type" id="intern-var">
        
    </div>
    <div class="data-var-type" id="in-dig-var">
        <div>
            <p>Modelo</p>
            <select name="disp-model-in-dig" id="disp-model-in-dig">
                
            </select>
        </div>
    </div>
    <div class="data-var-type" id="in-ana-var">
        <div>
            <p>Modelo</p>
            <select name="disp-model-in-ana" id="disp-model-in-ana">
                
            </select>
        </div>
        <br><br><br><br>
        <div id="merging-tooltips"></div>
        <div id="valores"></div>
        <br>
        <button onclick="addDiv()">Adicionar div</button>
        <button onclick="removeDiv()">Remover div</button>
    </div>
    <div class="data-var-type" id="out-dig-var">
        <div>
            <p>Modelo</p>
            <select name="disp-model-out-dig" id="disp-model-out-dig">
                
            </select>
        </div>
    </div>
    <div class="data-var-type" id="out-ana-var">
        <div>
            <p>Modelo</p>
            <select name="disp-model-out-ana" id="disp-model-out-out-dig">
                
            </select>
        </div>
        <br><br><br><br>
        <div id="merging-tooltips-out"></div>
        <div id="valores-out"></div>
        <br>
        <button onclick="addDivOut()">Adicionar div</button>
        <button onclick="removeDivOut()">Remover div</button>
    </div>

    <button onclick="addVar()">Adicionar</button>
</div>