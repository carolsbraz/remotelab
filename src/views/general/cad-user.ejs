<body>
    <section>
        <%- include('../partials/navbar', {logo: "/general/img/logo-remotelab.svg", link1: "#", icon1: "/general/img/icons/home-icon.svg", descricao1: "Ícone de tela inicial", link2: "#", icon2: "/general/img/icons/settings-icon.svg", descricao2: "Ícone de configuração dos dados do usuário", class1: "active", class2: ""}) %>

        <div class="data">
            <h2>Cadastro de usuário</h2>
            <form action="/clp-data" method="post" class="add-user">
                <div class="texts">
                    <input type="text" name="txt-nome-user" id="txt-nome-user" placeholder="Insira o nome do usuário">
                    <input type="text" name="txt-email-user" id="txt-email-user" placeholder="Insira o email do usuário">
                </div>
                <div class="texts">
                    <input type="text" name="txt-senha-user" id="txt-senha-user" placeholder="Insira a senha do usuário">
                    <select name="txt-user-type" id="txt-user-type">
                        <option value="comum">Usuário comum</option>
                        <option value="adm">Administrador</option>
                    </select>
                </div>
                <div class="button">
                    <button type="submit"><img src="/general/img/icons/edit-icon.svg" alt="ìcone de login">Atualizar</button>
                </div>
            </form>
            
        </div>
        
    </section>
    
